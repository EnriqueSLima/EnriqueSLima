            rgba: .2, .2, .2, 2
        Rectangle:
            size: 400, 700
            pos: 0, 0

    Label:
        text: "Email"
        font_size: 12
        pos: 40, 350

    TextInput:
        multiline: False
        pos: 50, 350
        size: 300, 30
    
    Label:
        text: "Telefone"
        font_size: 12
        pos: 40, 250

    TextInput:
        multiline: False
        pos: 50, 250
        size: 300, 30
    
    Label:
        text: "Senha"
        font_size: 12
        pos: 40, 150

    TextInput:
        multiline: False
        password: True
        pos: 50, 150
        size: 300, 30

    Button: 
        text: "Cadastrar"
        pos: 50, 50
        size: 300, 30